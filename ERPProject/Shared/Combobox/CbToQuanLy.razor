@using System.Collections.ObjectModel;
@using DAO.Services.DanhMuc;
@using Syncfusion.Blazor.DropDowns;

<SfDropDownList Placeholder="Chọn..." @ref="cb" @bind-Value="@Value" TValue="int?" Width="@Width" PopupWidth="@PopupWidth"
                TItem="@DAO.Models.DanhMuc.to_quan_ly"
                AllowFiltering="true" FilterType="@Syncfusion.Blazor.DropDowns.FilterType.Contains"
                ShowClearButton="true" DataSource="Data">

    <DropDownListFieldSettings Text="ten_tql" Value="ms_tql"></DropDownListFieldSettings>
    <DropDownListEvents TValue="int?" TItem="@DAO.Models.DanhMuc.to_quan_ly" ValueChange="ValueChange"></DropDownListEvents>
</SfDropDownList>

@code {
    private SfDropDownList<int?, DAO.Models.DanhMuc.to_quan_ly> cb;
    private List<DAO.Models.DanhMuc.to_quan_ly> Data = new List<DAO.Models.DanhMuc.to_quan_ly>();
    [Parameter]
    public int Index { get; set; }

    [Parameter]
    public string PopupWidth { get; set; } = "200px";

    [Parameter]
    public string Width { get; set; } = "100px";

    [Parameter]
    public int? Value { get; set; }
    [Parameter]
    public EventCallback<int?> ValueChanged { get; set; }
    private void ValueChange(Syncfusion.Blazor.DropDowns.ChangeEventArgs<int?, DAO.Models.DanhMuc.to_quan_ly> args)
    {
        Value = args.Value;
        ValueChanged.InvokeAsync(Value);
    }
    protected override void OnInitialized()
    {
        Data = to_quan_lyService.GetToComBo().Data;
    }
    public void setFocus()
    {
        cb.FocusIn();
    }
}
