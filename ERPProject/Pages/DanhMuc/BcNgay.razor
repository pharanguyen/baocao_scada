@page "/Dm_BcNgay"
@using DAO.Models.DanhMuc
@using ERPProject.ViewModel
@inherits BcNgayBase

<style type="text/css">
    #gdv > div.e-gridcontent > div {
        max-height: calc(100vh - 185px) !important;
    }
     .scrollable-table {
            width: 100%;
            height: 100%; /* Adjust the height as needed */
            overflow: auto; /* Enable both horizontal and vertical scrolling */
        }
    .heading-col{
        background-color: #00676B;
        color:#fff;
        text-align: center;
        border: 1px solid #333;
    }
    .row-style{
        border:1px solid #333;
        text-align: center;
    }
</style>
@{
    int i = 0;
}
<BodyCard>
    <SfToolbar>
        <ToolbarItems>
            <ToolbarItem Type="ItemType.Button">
                <Template>
                    <SfButton CssClass="e-flat" IconCss="icon-loop3" @onclick="onTaiLai">Tải lại</SfButton>
                </Template>
            </ToolbarItem>
            <ToolbarItem Type="ItemType.Separator">
            </ToolbarItem>

            <ToolbarItem Type="ItemType.Button">
                <Template>
                    <SfButton CssClass="e-flat e-info" IconCss="icon-file-excel" @onclick="onXuatExcel">Xuất excel</SfButton>
                </Template>
            </ToolbarItem>
            <label><b>Lọc theo chi nhánh</b></label>

            <ToolbarItem Type="ItemType.Input">

            </ToolbarItem>
            <label><b>Lọc theo trạm</b></label>

            <ToolbarItem Type="ItemType.Input">

            </ToolbarItem>

        </ToolbarItems>
    </SfToolbar>
    @{
        var data = new List<BaoCaoNgayViewModel>();

        @if (ListNhatKyNgay != null)
        {
            var listNK = ListNhatKyNgay.GroupBy(x => x.Thoi_Gian).ToList();
            @foreach (var item in listNK)
            {
                var thongsotong = new BaoCaoNgayViewModel();
                thongsotong.ThoiGian = item.Key;
                data.Add(thongsotong);
            }
        }
    }
    <SfGrid DataSource="@data" AllowPaging="true" AllowFiltering="true" AllowResizing="true">
        <GridColumns>
            
            @if (ListNhatKyNgay != null)
            {
                <GridColumn TextAlign="TextAlign.Center" HeaderText="STT" Width="150">
                    <Template>@(i+1)</Template>
                </GridColumn>
                <GridColumn Field="ThoiGian" Format="dd/MM/yyyy HH:mm:ss" TextAlign="TextAlign.Center" HeaderText="Thời gian" Width="150"></GridColumn>
                var listTram = ListNhatKyNgay.GroupBy(x=>x.TenTram).Distinct();
                @foreach (var list in listTram)
                {
                    var items = list.Where(x=>x.Thoi_Gian == data[i].ThoiGian).Distinct().ToList();
                    <GridColumn HeaderText="@list.Key" TextAlign="TextAlign.Center" Width="300">
                        <GridColumns>
                            @foreach (var item in items)
                            {
                                <GridColumn HeaderText="@item.TenThongSo" TextAlign="TextAlign.Center" Width="150">
                                    <Template>@item.Gia_Tri</Template>
                                </GridColumn>
                            }                            
                        </GridColumns>
                    </GridColumn>
                }
                i++;
            }
        </GridColumns>
    </SfGrid>
