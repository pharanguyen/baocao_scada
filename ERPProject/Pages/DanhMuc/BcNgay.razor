@page "/Dm_BcNgay"
@using DAO.Models.DanhMuc
@inherits BcNgayBase
<style type="text/css">
    #gdv > div.e-gridcontent > div {
        max-height: calc(100vh - 185px) !important;
    }
</style>
<BodyCard>
    <SfToolbar>
        <ToolbarItems>
            <ToolbarItem Type="ItemType.Button">
                <Template>
                    <SfButton CssClass="e-flat" IconCss="icon-loop3" @onclick="onTaiLai">Tải lại</SfButton>
                </Template>
            </ToolbarItem>
            <ToolbarItem Type="ItemType.Separator">
            </ToolbarItem>
            <ToolbarItem Type="ItemType.Button">
                <Template>
                    <SfButton CssClass="e-flat" IsPrimary="true" IconCss="icon-plus2" @onclick="onThemMoi">Thêm</SfButton>
                </Template>
            </ToolbarItem>
            <ToolbarItem Type="ItemType.Button">
                <Template>
                    <SfButton CssClass="e-flat e-info" IconCss="icon-file-excel" @onclick="onXuatExcel">Xuất excel</SfButton>
                </Template>
            </ToolbarItem>
            <label><b>Lọc theo chi nhánh</b></label>

            <ToolbarItem Type="ItemType.Input">
                <Template>
                    <ERPProject.Shared.Combobox.CbChiNhanh @ref="@CbChiNhanh" Width="350px" ValueChanged="onTaiLai"></ERPProject.Shared.Combobox.CbChiNhanh>
                </Template>
            </ToolbarItem>
            <label><b>Lọc theo trạm</b></label>

            <ToolbarItem Type="ItemType.Input">
                <Template>
                    <ERPProject.Shared.Combobox.CbTram @ref="@CbTram" Width="350px" ValueChanged="onTaiLai"></ERPProject.Shared.Combobox.CbTram>
                </Template>
            </ToolbarItem>

        </ToolbarItems>
    </SfToolbar>

    <SfGrid id="gdv"
            DataSource="@listNhatKyNgay"
            AllowReordering="true"
            Width="100%"
            AllowExcelExport="true"
            GridLines="GridLine.Both"
            AllowResizing="true"
            AllowFiltering="true"
            AllowPaging="true">
        <GridPageSettings PageSize="100"></GridPageSettings>
        <!-- Chọn nhiều dòng -->
        <GridSelectionSettings Type="Syncfusion.Blazor.Grids.SelectionType.Multiple"></GridSelectionSettings>
        <GridColumns>
            <GridColumn HeaderText="STT" Field="Id" HeaderTextAlign="TextAlign.Center" TextAlign="TextAlign.Left" Width="30">
            </GridColumn>
            <GridColumn HeaderText="Thời gian" Field="Thoi_Gian" HeaderTextAlign="TextAlign.Center" TextAlign="TextAlign.Left" Width="30">
            </GridColumn>
            <GridColumn HeaderText="Ngày_tháng" Field="TenThongSo" HeaderTextAlign="TextAlign.Center" TextAlign="TextAlign.Left" Width="30">
            </GridColumn>
            <GridColumn HeaderText="Trạm" Field="TenTram" HeaderTextAlign="TextAlign.Center" TextAlign="TextAlign.Left" Width="30">
            </GridColumn>
            <!-- Tạo các cột cho các thông số động -->
            @{
                var distinctThongSo = listNhatKyNgay
                .Where(x => x.TenThongSo != null) // Lọc các giá trị null
                .GroupBy(x => x.TenThongSo)
                .Select(g => g.First());

                foreach (var thongSo in distinctThongSo)
                {
                    <GridColumn Field="@thongSo.TenThongSo" HeaderText="@thongSo.TenThongSo" Width="30"></GridColumn>
                }
            }
            <!-- Kết thúc vòng lặp -->
        </GridColumns>
    </SfGrid>




</BodyCard>








