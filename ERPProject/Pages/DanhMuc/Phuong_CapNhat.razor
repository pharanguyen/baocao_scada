@using DAO.Models.DanhMuc
@using ERPProject.Shared.Combobox
@inherits Phuong_CapNhatBase
<style type="text/css">
    .e-upload {
        border: none;
    }

        .e-upload e-control-wrapper e-lib e-keyboard {
            border: none;
        }

        .e-upload .e-file-select-wrap, .e-bigger.e-small .e-upload .e-file-select-wrap {
            padding: 5px;
            height: 0px;
        }

    .e-file-drop, .e-upload-files {
        display: none;
    }

    .custom-class.e-control-wrapper .e-textbox {
        text-align: left;
    }
</style>

<SfDialog @bind-Visible="isShow" IsModal="true" ShowCloseIcon="true" Width="900" ZIndex="101">
    <DialogTemplates>
        <Header>
            <h3><i class="@((isThemMoi)?"icon-plus2":"icon-pencil")">@TieuDe</i></h3>
        </Header>
        <Content>
            <div class="row">                
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Tên Phường</label>
                        <SfTextBox TValue="string" @bind-Value="objModel.ten_phuong"></SfTextBox>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Quận</label>
                        <CboQuan @bind-Value="objModel.ms_quan" Width="100%" PopupWidth="100%"></CboQuan>
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Vị trí</label>
                        <SfTextBox TValue="string" @bind-Value="objModel.vi_tri"></SfTextBox>
                    </div>
                </div>
            </div>

        </Content>
        <FooterTemplate>
            <SfButton IsPrimary="true" IconCss="icon-floppy-disk" OnClick="onSave">Lưu</SfButton>
            <SfButton CssClass="e-flat e-danger" IconCss="icon-cross" OnClick="onClose">Đóng</SfButton>
        </FooterTemplate>
    </DialogTemplates>
    <DialogEvents Closed="@(()=> { OnLuu.Invoke(isDaCapNhatDuLieu); })"></DialogEvents>
</SfDialog>
