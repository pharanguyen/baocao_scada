@using System.Collections.ObjectModel;
@using DAO.Services.DanhMuc.KhachHang;
@using DAO.Models.DanhMuc.KhachHang;
@using Syncfusion.Blazor.DropDowns;

<SfDropDownList Placeholder="Chọn..." @ref="cb" @bind-Value="@Value" TValue="int" Width="@Width" PopupWidth="@PopupWidth"
                TItem="@tt_k_hang"
                AllowFiltering="true" FilterType="@Syncfusion.Blazor.DropDowns.FilterType.Contains"
                ShowClearButton="true" DataSource="Data">

    <DropDownListFieldSettings Text="ten_tt_kh" Value="ms_tt_kh"></DropDownListFieldSettings>
    <DropDownListEvents TValue="int" TItem="@tt_k_hang" ValueChange="ValueChange"></DropDownListEvents>
</SfDropDownList>

@code {
    private SfDropDownList<int, tt_k_hang> cb;
    private List<tt_k_hang> Data = new List<tt_k_hang>();
    [Parameter]
    public int Index { get; set; }

    [Parameter]
    public string PopupWidth { get; set; } = "200px";

    [Parameter]
    public string Width { get; set; } = "100px";

    [Parameter]
    public int Value { get; set; }
    [Parameter]
    public EventCallback<int> ValueChanged { get; set; }
    private void ValueChange(Syncfusion.Blazor.DropDowns.ChangeEventArgs<int, tt_k_hang> args)
    {
        Value = args.Value;
        ValueChanged.InvokeAsync(Value);
    }
    protected override void OnInitialized()
    {
        Data = tt_k_hangService.GetToComBo().Data;
    }
    public void setFocus()
    {
        cb.FocusIn();
    }
}
