@page "/Dm_Tql"
@using DAO.Models.DanhMuc
@inherits Dm_TqlBase
<style type="text/css">
    #gdv > div.e-gridcontent > div {
        max-height: calc(100vh - 185px) !important;
    }
</style>
<BodyCard>
    <SfToolbar>
        <ToolbarItems>
            <ToolbarItem Type="ItemType.Button">
                <Template>
                    <SfButton CssClass="e-flat" IconCss="icon-loop3" @onclick="onTaiLai">Tải lại</SfButton>
                </Template>
            </ToolbarItem>
            <ToolbarItem Type="ItemType.Separator">
            </ToolbarItem>
            <ToolbarItem Type="ItemType.Button">
                <Template>
                    <SfButton CssClass="e-flat" IsPrimary="true" IconCss="icon-plus2" @onclick="onThemMoi">Thêm</SfButton>
                </Template>
            </ToolbarItem>
        </ToolbarItems>
    </SfToolbar>

    <SfGrid id="gdv"
            DataSource="@listTql"
            AllowReordering="true"
            Width="100%"
            GridLines="GridLine.Both"
            AllowResizing="true"
            AllowFiltering="true">
        <GridSelectionSettings EnableToggle="false"></GridSelectionSettings>
        <GridFilterSettings Mode="FilterBarMode.Immediate" ImmediateModeDelay="500" Operators="Operator.Contains"></GridFilterSettings>
        <GridColumns>
            <GridColumn HeaderText="" TextAlign="@TextAlign.Center" Width="50">
                <Template>
                    <SfButton CssClass="e-small" IconCss="icon-pencil" @onclick="@(()=> onCapNhat((context as prc_Tql).Id))"></SfButton>
                    <SfButton CssClass="e-small" IconCss="icon-trash" @onclick="@(()=> onXoa((context as prc_Tql).Id))"></SfButton>
                </Template>
            </GridColumn>
            <GridColumn Field="Id"
                        IsPrimaryKey="true"
                        HeaderText="STT"
                        HeaderTextAlign="TextAlign.Center"
                        TextAlign="TextAlign.Left"
                        Width="30">

            </GridColumn>
            <GridColumn Field="TenTql"
                        HeaderText="Tên tổ quản lý"
                        HeaderTextAlign="TextAlign.Center"
                        TextAlign="TextAlign.Left"
                        Width="30"
                        FilterSettings="@(new FilterSettings() { Operator = Operator.Contains })">

            </GridColumn>
            <GridColumn Field="TenChiNhanh"
                        HeaderText="Thuộc chi Nhánh"
                        HeaderTextAlign="TextAlign.Center"
                        TextAlign="TextAlign.Left"
                        Width="30">

            </GridColumn>
            <GridColumn Field="Ma"
                        HeaderText="Mã"
                        HeaderTextAlign="TextAlign.Center"
                        TextAlign="TextAlign.Left"
                        FilterSettings="@(new FilterSettings() { Operator = Operator.Contains })"
                        Width="30">

            </GridColumn>
            <GridColumn Field="Dia_Chi"
                        HeaderText="Địa chỉ"
                        HeaderTextAlign="TextAlign.Center"
                        TextAlign="TextAlign.Left"
                        FilterSettings="@(new FilterSettings() { Operator = Operator.Contains })"
                        Width="30">

            </GridColumn>
            <GridColumn Field="Stt"
                        HeaderText="Thứ tự"
                        HeaderTextAlign="TextAlign.Center"
                        TextAlign="TextAlign.Left"
                        FilterSettings="@(new FilterSettings() { Operator = Operator.Contains })"
                        Width="30">

            </GridColumn>
        </GridColumns>
    </SfGrid>
</BodyCard>
<Dm_Tql_CapNhat @ref="fCapNhat" OnLuu="XacNhanLuu"></Dm_Tql_CapNhat>
<FormXacNhan @ref="frmXacNhan"> </FormXacNhan>