@page "/moi_noi"
@using DAO.Models.DanhMuc.KhachHang
@inherits KhachHang_MoiNoiBase
<style type="text/css">
    #gdv > div.e-gridcontent > div {
        max-height: calc(100vh - 185px) !important;
    }
</style>
<BodyCard>
    <SfToolbar>
        <ToolbarItems>
            <ToolbarItem Type="ItemType.Button">
                <Template>
                    <SfButton CssClass="e-flat" IconCss="icon-loop3" @onclick="onTaiLai">Tải lại</SfButton>
                </Template>
            </ToolbarItem>
            <ToolbarItem Type="ItemType.Separator">
            </ToolbarItem>
            <ToolbarItem Type="ItemType.Button">
                <Template>
                    <SfButton CssClass="e-flat" IsPrimary="true" IconCss="icon-plus2" @onclick="onThemMoi">Thêm</SfButton>
                </Template>
            </ToolbarItem>
            <ToolbarItem Type="ItemType.Button">
                <Template>
                    <SfButton CssClass="e-flat e-info" IconCss="icon-file-excel" @onclick="onXuatExcel">Xuất excel</SfButton>
                </Template>
            </ToolbarItem>
            <ToolbarItem Type="ItemType.Input">
                <Template>
                    <ERPProject.Shared.Combobox.CboTuyenDoc @ref="@cboTuyenDoc" Width="350px" ValueChanged="onTaiLai"></ERPProject.Shared.Combobox.CboTuyenDoc>
                </Template>
            </ToolbarItem>

        </ToolbarItems>
    </SfToolbar>

    <SfGrid id="gdv"
            DataSource="@listPrcKhachHangMoiNoi"
            AllowReordering="true"
            Width="100%"
            @ref="gdv"
            AllowExcelExport="true"
            GridLines="GridLine.Both"
            AllowResizing="true"
            AllowFiltering="true"
            AllowPaging="true">
        <GridPageSettings PageSize="100"></GridPageSettings>
        <GridSelectionSettings EnableToggle="false"></GridSelectionSettings>
        <GridFilterSettings Mode="FilterBarMode.Immediate" ImmediateModeDelay="500" Operators="Operator.Contains"></GridFilterSettings>
        @*cho phép lựa chọn nhiều dòng*@
        <GridSelectionSettings Type="Syncfusion.Blazor.Grids.SelectionType.Multiple"></GridSelectionSettings>
        <GridColumns>
            <GridColumn HeaderText="" TextAlign="@TextAlign.Center" Width="30">
                <Template>
                    <SfButton CssClass="e-small" IconCss="icon-pencil" @onclick="@(()=> onCapNhat((context as prc_khachhang_moinoi).ms_mnoi))"></SfButton>
                    <SfButton CssClass="e-small" IconCss="icon-trash" @onclick="@(()=> onXoa((context as prc_khachhang_moinoi).ms_mnoi))"></SfButton>
                </Template>
            </GridColumn>
            <GridColumn Field="ms_mnoi"
                        IsPrimaryKey="true"
                        HeaderText="Mã KH"
                        HeaderTextAlign="TextAlign.Center"
                        TextAlign="TextAlign.Left"
                        FilterSettings="@(new FilterSettings() { Operator = Operator.Contains })"
                        Width="30">

            </GridColumn>
            <GridColumn Field="nguoi_thue"
                        HeaderText="Tên KH"
                        HeaderTextAlign="TextAlign.Center"
                        TextAlign="TextAlign.Left"
                        Width="80"
                        FilterSettings="@(new FilterSettings() { Operator = Operator.Contains })">

            </GridColumn>
            <GridColumn Field="dia_chi_mnoi"
                        HeaderText="Địa chỉ"
                        HeaderTextAlign="TextAlign.Center"
                        TextAlign="TextAlign.Left"
                        FilterSettings="@(new FilterSettings() { Operator = Operator.Contains })"
                        Width="100">

            </GridColumn>
            <GridColumn Field="dien_thoai"
                        HeaderText="Điện Thoại"
                        HeaderTextAlign="TextAlign.Center"
                        TextAlign="TextAlign.Left"
                        FilterSettings="@(new FilterSettings() { Operator = Operator.Contains })"
                        Width="70">

            </GridColumn>
            <GridColumn Field="ten_loai_kh"
                        HeaderText="Loại KH"
                        HeaderTextAlign="TextAlign.Center"
                        TextAlign="TextAlign.Left"
                        FilterSettings="@(new FilterSettings() { Operator = Operator.Contains })"
                        Width="30">

            </GridColumn>
            <GridColumn Field="ngay_nhap_kh"
                        HeaderText="Ngày Nhập"
                        HeaderTextAlign="TextAlign.Center"
                        TextAlign="TextAlign.Left"
                        Type="ColumnType.Date"
                        Format="dd/MM/yyyy"
                        Width="30">

            </GridColumn>
            @*  <GridColumn Field="ten_duong"
            HeaderText="Tên Đường"
            HeaderTextAlign="TextAlign.Center"
            TextAlign="TextAlign.Left"
            FilterSettings="@(new FilterSettings() { Operator = Operator.Contains })"
            Width="30">

            </GridColumn> *@
            @*  <GridColumn Field="ten_phuong"
            HeaderText="Tên Phường"
            HeaderTextAlign="TextAlign.Center"
            TextAlign="TextAlign.Left"
            FilterSettings="@(new FilterSettings() { Operator = Operator.Contains })"
            Width="30">

            </GridColumn> *@
            <GridColumn Field="mo_ta_dd"
                        HeaderText="Mô Tả"
                        HeaderTextAlign="TextAlign.Center"
                        TextAlign="TextAlign.Left"
                        FilterSettings="@(new FilterSettings() { Operator = Operator.Contains })"
                        Width="30">

            </GridColumn>
        </GridColumns>
    </SfGrid>
</BodyCard>
<KhachHang_MoiNoi_CapNhat @ref="fCapNhat" OnLuu="XacNhanLuu"></KhachHang_MoiNoi_CapNhat>
<FormXacNhan @ref="frmXacNhan"> </FormXacNhan>
