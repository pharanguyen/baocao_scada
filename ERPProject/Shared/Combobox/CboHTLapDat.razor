@using System.Collections.ObjectModel;
@using DAO.Services.DanhMuc.PhanLoaiDoiTuong;
@using DAO.Models.DanhMuc.PhanLoaiDoiTuong;
@using Syncfusion.Blazor.DropDowns;

<SfDropDownList Placeholder="Chọn..." @ref="cb" @bind-Value="@Value" TValue="int?" Width="@Width" PopupWidth="@PopupWidth"
                TItem="@ht_lap_dat"
                AllowFiltering="true" FilterType="@Syncfusion.Blazor.DropDowns.FilterType.Contains"
                ShowClearButton="true" DataSource="Data">

    <DropDownListFieldSettings Text="ten_ht_lap_dat" Value="ms_ht_lap_dat"></DropDownListFieldSettings>
    <DropDownListEvents TValue="int?" TItem="@ht_lap_dat" ValueChange="ValueChange"></DropDownListEvents>
</SfDropDownList>

@code {
    private SfDropDownList<int?, ht_lap_dat> cb;
    private List<ht_lap_dat> Data = new List<ht_lap_dat>();
    [Parameter]
    public int Index { get; set; }

    [Parameter]
    public string PopupWidth { get; set; } = "200px";

    [Parameter]
    public string Width { get; set; } = "100px";

    [Parameter]
    public int? Value { get; set; }
    [Parameter]
    public EventCallback<int?> ValueChanged { get; set; }
    private void ValueChange(Syncfusion.Blazor.DropDowns.ChangeEventArgs<int?, ht_lap_dat> args)
    {
        Value = args.Value;
        ValueChanged.InvokeAsync(Value);
    }
    protected override void OnInitialized()
    {
        Data = ht_lap_datService.GetToComBo().Data;
    }
    public void setFocus()
    {
        cb.FocusIn();
    }
}
