@page "/to_quan_ly"
@using DAO.Models.DanhMuc
@inherits To_Quan_lyBase
<style type="text/css">
    #gdv > div.e-gridcontent > div {
        max-height: calc(100vh - 185px) !important;
    }
</style>
<BodyCard>
    <SfToolbar>
        <ToolbarItems>
            <ToolbarItem Type="ItemType.Button">
                <Template>
                    <SfButton CssClass="e-flat" IconCss="icon-loop3" @onclick="onTaiLai">Tải lại</SfButton>
                </Template>
            </ToolbarItem>
            <ToolbarItem Type="ItemType.Separator">
            </ToolbarItem>
            <ToolbarItem Type="ItemType.Button">
                <Template>
                    <SfButton CssClass="e-flat" IsPrimary="true" IconCss="icon-plus2" @onclick="onThemMoi">Thêm</SfButton>
                </Template>
            </ToolbarItem>
        </ToolbarItems>
    </SfToolbar>

    <SfGrid id="gdv"
            DataSource="@listToQuanLy"
            AllowReordering="true"
            Width="100%"
            GridLines="GridLine.Both"
            AllowResizing="true"
            AllowFiltering="true">
        <GridSelectionSettings EnableToggle="false"></GridSelectionSettings>
        <GridFilterSettings Mode="FilterBarMode.Immediate" ImmediateModeDelay="500" Operators="Operator.Contains"></GridFilterSettings>
        <GridColumns>
            <GridColumn HeaderText="" TextAlign="@TextAlign.Center" Width="30">
                <Template>
                    <SfButton CssClass="e-small" IconCss="icon-pencil" @onclick="@(()=> onCapNhat((context as prc_to_quan_ly).ms_tql))"></SfButton>
                    <SfButton CssClass="e-small" IconCss="icon-trash" @onclick="@(()=> onXoa((context as prc_to_quan_ly).ms_tql))"></SfButton>
                </Template>
            </GridColumn>
            <GridColumn Field="ms_tql"
                        IsPrimaryKey="true"
                        HeaderText="Mã TQL"
                        HeaderTextAlign="TextAlign.Center"
                        TextAlign="TextAlign.Left"
                        Width="30">

            </GridColumn>
            <GridColumn Field="ten_tql"
                        HeaderText="Tên TQL"
                        HeaderTextAlign="TextAlign.Center"
                        TextAlign="TextAlign.Left"
                        Width="120"
                        FilterSettings="@(new FilterSettings() { Operator = Operator.Contains })">

            </GridColumn>
            <GridColumn Field="ghi_chu"
                        HeaderText="Ghi Chú"
                        HeaderTextAlign="TextAlign.Center"
                        TextAlign="TextAlign.Left"
                        Width="120">

            </GridColumn>
            <GridColumn Field="ten_chinhanh"
                        HeaderText="Chi Nhánh"
                        HeaderTextAlign="TextAlign.Center"
                        TextAlign="TextAlign.Left"
                        FilterSettings="@(new FilterSettings() { Operator = Operator.Contains })"
                        Width="120">

            </GridColumn>
            <GridColumn Field="ms_chinhanh"
                        HeaderText="Mã Chi Nhánh"
                        HeaderTextAlign="TextAlign.Center"
                        TextAlign="TextAlign.Left"
                        Visible="false"
                        Width="20"
                        >
                        
            </GridColumn>
        </GridColumns>
    </SfGrid>
</BodyCard>
<To_Quan_Ly_CapNhat @ref="fCapNhat" OnLuu="XacNhanLuu"></To_Quan_Ly_CapNhat>
<FormXacNhan @ref="frmXacNhan"> </FormXacNhan>
